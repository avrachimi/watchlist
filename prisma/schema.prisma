// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

// Necessary for Next auth
model Account {
    id                       String  @id @default(cuid())
    userId                   String  @db.VarChar(1000)
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String? @db.Text
    refresh_token_expires_in Int?
    access_token             String? @db.Text
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String? @db.Text
    session_state            String?
    user                     User    @relation(fields: [userId], references: [id])

    @@unique([provider, providerAccountId])
    @@index([userId(length: 100)])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
}

model User {
    id            String      @id(length: 100) @default(cuid()) @db.VarChar(100)
    name          String?
    email         String?     @unique
    emailVerified DateTime?
    image         String?
    accounts      Account[]
    sessions      Session[]
    Rating        Rating[]
    Watched       Watched[]
    Watchlist     Watchlist[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

// My schema
model Movie {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    imdbId           String      @db.VarChar(255)
    title            String      @db.VarChar(255)
    plot             String      @db.Text
    rottenRating     Float       @db.Float
    metacriticRating Float       @db.Float
    imdbRating       Float       @db.Float
    friendRating     Float       @default(0.0) @db.Float
    imageUrl         String      @db.VarChar(2000)
    type             String      @db.VarChar(50)
    genre            String?
    released         DateTime?
    runtime          Int?
    Rating           Rating[]
    Watched          Watched[]
    Watchlist        Watchlist[]
}

model Rating {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    rating Float  @db.Float
    review String @default("") @db.Text

    movieId String
    userId  String @db.VarChar(100)

    movie Movie @relation(fields: [movieId], references: [id])
    user  User  @relation(fields: [userId], references: [id])

    @@unique([userId, movieId])
    @@index([userId])
    @@index([movieId])
}

model Watched {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    movieId String
    userId  String @db.VarChar(100)

    movie Movie @relation(fields: [movieId], references: [id])
    user  User  @relation(fields: [userId], references: [id])

    @@unique([userId, movieId])
    @@index([userId])
    @@index([movieId])
}

model Watchlist {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    movieId String
    userId  String @db.VarChar(100)

    movie Movie @relation(fields: [movieId], references: [id])
    user  User  @relation(fields: [userId], references: [id])

    @@unique([userId, movieId])
    @@index([userId])
    @@index([movieId])
}
